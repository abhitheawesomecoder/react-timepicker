{
  "name": "@theawesomecoder/react-timepicker",
  "version": "0.0.2",
  "description": "A lightweight React time picker component",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "tsup && npx tailwindcss -i src/styles.css -o dist/styles.css -m",
    "dev": "tsup --watch"
  },
  "keywords": [
    "react",
    "timepicker"
  ],
  "author": "Abhishek Kumar",
  "license": "MIT",
  "dependencies": {
    "@internationalized/date": "^3.10.1",
    "@radix-ui/react-dialog": "^1.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "luxon": "^3.7.2",
    "react-aria-components": "^1.14.0",
    "tailwind-merge": "^3.4.1"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "tailwindcss": "^3.4.19",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}

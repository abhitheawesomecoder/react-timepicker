{
  "name": "react-timepicker",
  "version": "0.0.1",
  "description": "A lightweight React time picker component",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
